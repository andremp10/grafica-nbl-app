# Copie este arquivo para `.env` (NÃO commitar) e preencha.

# -----------------------------------------------------------------------------
# DESTINO: Supabase (API)
# -----------------------------------------------------------------------------
SUPABASE_URL=
SUPABASE_KEY=  # use a service_role key (NUNCA anon key)

# -----------------------------------------------------------------------------
# DESTINO: Postgres (conexão direta, usada para introspecção de schema)
# -----------------------------------------------------------------------------
PG_HOST=
PG_PORT=5432
PG_DBNAME=postgres
PG_USER=
PG_PASSWORD=
PG_SSLMODE=require

# -----------------------------------------------------------------------------
# FONTE: MySQL (container local via Docker Compose)
# -----------------------------------------------------------------------------
MYSQL_HOST=127.0.0.1
MYSQL_PORT=3307
MYSQL_USER=root
MYSQL_PASSWORD=root
MYSQL_DATABASE=legacy

# -----------------------------------------------------------------------------
# ETL - ajustes opcionais
# -----------------------------------------------------------------------------
ETL_BATCH_SIZE=500
ETL_VALIDATE_FKS=1
ETL_RETRIES=6
ETL_RETRY_BASE_SLEEP_S=0.8
ETL_DEDUP_VISITAS_ONLINE=0
ETL_PREFLIGHT=1
ETL_PRINT_ORDER=0
ETL_LOG_EVERY_BATCHES=10
ETL_ONLY_TABLES=

# Caminhos (opcionais)
OUTPUT_DIR=output
ETL_MAPPING_PATH=config/column_mapping.json
ETL_ERROR_DIR=output/errors

